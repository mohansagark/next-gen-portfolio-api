{
  "name": "next-gen-portfolio-api",
  "version": "1.0.0",
  "description": "Modern, production-grade backend API for portfolio website with modular architecture, Swagger docs, and Railway deployment",
  "main": "build/index.js",
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "dev": "yarn ts-node src/index.ts",
    "build": "tsc",
    "start": "node build/index.js",
    "migrate": "flyway migrate",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "swagger": "npx yaml2json ./src/docs/swagger.yaml > ./swagger.json",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "portfolio",
    "api",
    "express",
    "typescript",
    "prisma",
    "swagger",
    "railway"
  ],
  "author": "Mohan Sagar",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "prisma": "^6.12.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
